@using HappySitter.Models
@using Microsoft.AspNet.Identity
@model IEnumerable<HappySitter.Models.Reservation>

@{
    ViewBag.Title = "Index";

    List<Reservation> upComingReservations = (List<Reservation>)ViewBag.UpComingReservations ?? new List<Reservation>();
    List<Reservation> pastReservations = (List<Reservation>)ViewBag.PastReservations ?? new List<Reservation>(); ;

}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#upcomingReservationsTable').DataTable({
            "searching": false,
            "lengthChange": false
        });
        $('#pastReservationsTable').DataTable({
            "searching": false,
            "lengthChange": false
        });
    });

</script>

<h2>Reservations</h2>

<p class="text-right">
    @*@Html.ActionLink("Create New", "Create")*@
    @Html.ActionLink("Book a Sitter", "SearchSitter", null, new { @class = "btn btn-primary", data_ajax = "false" })
</p>
<hr />
<h4>Upcoming Reservations</h4>
<br />
<table class="table" id="upcomingReservationsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SitterUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDateTime)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CancelDateTime)
                </th>*@
            <th>Action</th>
        </tr>
    <thead>
    <tbody>
        @if (upComingReservations.Count > 0)
        {
            foreach (var item in upComingReservations)
            {
                <tr>
                    <td>
                        @item.SitterUserName
                    </td>
                    <td>
                        @item.ServiceDate.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @item.FromTime
                    </td>
                    <td>
                        @item.ToTime
                    </td>
                    <td>
                        @item.ReservationStatus
                    </td>
                    <td>
                        @item.RegistrationDateTime.ToString("MM/dd/yyyy")
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.CancelDateTime)
                        </td>*@
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@

                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                        
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No Reservations</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>


<hr />
<h4>Past Reservations</h4>
